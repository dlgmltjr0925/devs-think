{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "~/client/app/*": ["./src/client/app/*"],
      "~/client/pages/*": ["./src/client/pages/*"],
      "~/client/widgets/*": ["./src/client/widgets/*"],
      "~/client/features/*": ["./src/client/features/*"],
      "~/client/entities/*": ["./src/client/entities/*"],
      "~/client/shared/*": ["./src/client/shared/*"],
      "~/server/adapter/*": ["./src/server/adapter/*"],
      "~/server/application/*": ["./src/server/application/*"],
      "~/server/domains/*": ["./src/server/domains/*"],
      "~/server/infra/*": ["./src/server/infra/*"],
      "~/shared/*": ["./src/shared/*"],
      "~/*": ["./src/client/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
